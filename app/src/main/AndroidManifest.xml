<?xml version="1.0" encoding="utf-8"?>
<manifest package="leeco.hellogithub"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".DemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".home.HomeActivity"/>

        <!-- startup mode -->
        <activity
            android:name="leeco.startup.ActStartupMain"/>

        <activity
            android:name="leeco.startup.ActStartupOther"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity
            android:name="leeco.startup.ActStartupStandard"
            android:launchMode="standard"/>

        <activity
            android:name="leeco.startup.ActStartupSingleTop"
            android:launchMode="singleTop"/>

        <activity
            android:name="leeco.startup.ActStartupSingleTask"
            android:launchMode="singleTask"
            android:taskAffinity="sunny.singleTask"/>

        <activity
            android:name="leeco.startup.ActStartupSingleInstance"
            android:launchMode="singleInstance"/>

    </application>

</manifest>